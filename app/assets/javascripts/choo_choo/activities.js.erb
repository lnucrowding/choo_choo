// TODO: Support Turbolinks
$(function () {
  var delaySeconds = 5
  getActivities();

  function getActivities() {
    // FIXME: Set default_host somewhere else or get url from template
    $.getScript('<%= activities_url host: "localhost:3000" %>');
    poll();
  }

  function poll() {
    setTimeout(getActivities, delaySeconds * 1000);
  }
});
